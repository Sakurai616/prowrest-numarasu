<div class="p-6">
  <div class="card card-compact hover:bg-stone-100 rounded-lg shadow-lg mb-2 sm:mb-4">
    <% if chat_group.image.present? %>
      <%= link_to image_tag(chat_group.image.url), chat_group_path(chat_group.id) %>
    <% end %>
    <%= render partial: 'organizations/chat_group_organization', locals: { chat_group: chat_group } %>
      <div class="text-accent md:text-xl font-bold md:m-auto">
        <div class="flex justify-center hover:text-blue-500">
          <%= link_to chat_group.group_name, chat_group_path(chat_group.id) %>(<%= link_to chat_group.users.count, chat_group_path(chat_group.id) %>)
        </div>
        <div class="pt-4 text-center text-secondary hover:text-red-500 md:text-xl font-bold md:m-auto">
          <%= link_to chat_group.group_description, chat_group_path(chat_group.id) %>
        </div>
      </div>
  </div>
</div>