<% content_for(:title, t('.title')) %>
<div class="py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 py-4 md:px-8 mx-auto">
    <h2 class="text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8 md:text-red-500">
      <%= t '.title' %>
    </h2>
    <div class="max-w-xl border rounded-xl mx-auto mb-10">
      <div class="flex flex-col bg-stone-50 gap-4 p-4 md:p-8 ">
        <%= form_with url: login_path, local: true do |f|%>
          <div class="form-control mb-10">
            <%= f.label :email, User.human_attribute_name(:email), class: 'font-bold' %>
            <%= f.email_field :email, class: 'input input-accent' %>
          </div>
          <div class="form-control mb-10">
            <%= f.label :password, User.human_attribute_name(:password), class: 'font-bold' %>
            <%= f.password_field :password, class: 'input input-accent' %>
          </div>
          <p class="text-sm text-end">*必須項目</p>
          <%= f.submit (t 'defaults.login'), class: 'btn btn-block btn-secondary mt-10 mb-10'%>
        <% end %>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "登録がまだの方はこちら", new_user_path, class: "btn btn-secondary" %>
  </div>
</div>