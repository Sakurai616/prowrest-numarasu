<% if choice.correct_answer == "correct" %>
  <h3 class="text-center text-xl text-accent m-1">
    <i class="fa-regular fa-circle"></i>
    <%= choice.body %>
  </h3>
<% else %>
  <h4 class="text-center text-xl text-success m-1">
  <i class="fa-solid fa-xmark"></i>
    <%= choice.body %>
  </h4>
<% end %>