<% content_for(:title, t('.result')) %>
<div class="bg-stone-100 p-4 m-4">
  <div class="py-6 sm:py-8 lg:py-12">
    <h2 class="text-accent-content text-2xl lg:text-3xl font-bold text-center text-5xl text-black">結果</h2>
    <div class="max-w-screen-2xl px-4 md:px-8 mx-auto ml-12 mt-16">
      <h3 class="text-accent-content text-9xl font-bold text-center text-red-500 text-5xl">
        <% if @selected_choice&.correct? %>
          正解！
        <% else %>
          残念！
        <% end %>
      </h3>
    </div>
  </div>

  <div>
    <div class="text-center pt-16">
      <div class="md:space-x-20">
        <%= render 'choices/choices', { choices: @choices } %>
      </div>
    </div>
    <div class="text-center pt-16">
      <button class="btn btn-secondary md:text-lg"><%= link_to "クイズ一覧へ", questions_path %></button>
    </div>
  </div>
</div>