<turbo-frame id="like">
  <% if post.liked_by?(current_user) %>
    <%= link_to like_path(current_user.likes.find_by(post_id: post.id)), data: { turbo_method: :delete } do %>
      <i class="fa-solid fa-heart fa-2x text-accent"></i>
      <%= post.likes.count %>
    <% end %>
  <% else %>
    <%= link_to likes_path(post_id: post.id), data: { turbo_method: :post } do %>
      <i class="fa-regular fa-heart fa-2x text-accent"></i>
      <%= post.likes.count %>
    <% end %>
  <% end %>
</turbo-frame>