<%= form_with model: @post, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-control mb-10">
    <%= f.label :title, class: 'form-control' %>
    <%= f.text_field :title, class: 'input input-accent' %>
  </div>
  <div class="form-control mb-10">
    <%= f.label :body, class: 'form-control' %>
    <%= f.text_field :body, class: 'input input-accent' %>
  </div>
  <div class="form-control mb-10">
    <%= f.label :image, class: 'form-control' %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="form-control mb-10">
    <%= f.label :url, class: 'form-control' %>
    <%= f.text_field :url, placeholder: 'YouTubeのURLを入力してください' %>
  </div>
  <%= f.submit (t 'defaults.post'), class: 'btn btn-block btn-primary mt-10 mb-20 lg:mb-10'%>
<% end %>