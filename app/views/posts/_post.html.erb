<div class="col-sm-12 col-lg-4 mb-3">
  <div class="card">
    <% if post.image.present? %>
      <%= link_to image_tag(post.image.url), post_path(post), class: 'w-full h-full object-cover object-center' %>
    <% end %>
    <% if post.url.present? %>
      <iframe width="400" height="300" src="https://www.youtube.com/embed/<%= post.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <% end %>
  </div>
  <div>
    <%= link_to post.title, post_path(post), class: 'text-primary hover:text-primary-focus md:text-lg font-bold' %>
    <div class="text-primary hover:text-primary-focus md:text-lg font-bold">
      <%= post.body %>
    </div>
    <% if post.user == current_user %>
      <%= link_to (t 'defaults.delete'), post_path(post), data: { turbo_method: :delete, turbo_confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-accent' %>
    <% end %>
    <div>
    <% if logged_in? %>
      <%= render 'like', post: post %>
    <% end %>
    </div>
    <div class="text-primary hover:text-primary-focus md:text-lg font-bold">
      <%= render post.tags %>
    </div>
  </div>
</div>