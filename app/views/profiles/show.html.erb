<% content_for(:title, t('.title')) %>
<div>
  <div class="py-6 sm:py-8 lg:py-12">
    <h2 class="text-accent-content text-2xl lg:text-3xl font-bold text-center text-red-500 text-5xl animate-text-shadow-drop-center"><%= t '.title' %></h2>
    <div class="max-w-screen-2xl px-4 md:px-8 mx-auto pt-12">
      <div class="flex justify-center">
        <%= image_tag current_user.avatar_url, size: '300x300' %>
      </div>
      <div class="pt-12">
        <p class="font-bold text-center text-red-500 text-lg"><%= t '.name' %></p>
        <div class="max-w-xl border rounded-xl mx-auto">
          <div class="flex flex-col bg-stone-50 gap-4 p-4 md:p-8 text-center font-bold">
            <%= current_user.name %>
          </div>
        </div>
      </div>
      <div class="pt-16">
        <p class="font-bold text-center text-red-500 text-lg"><%= t '.email' %></p>
        <div class="max-w-xl border rounded-xl mx-auto">
          <div class="flex flex-col bg-stone-50 gap-4 p-4 md:p-8 text-center font-bold">
            <%= current_user.email %>
          </div>
        </div>
      <div class="flex justify-center pt-20">
        <div class="flex space-x-8">
          <%= link_to (t 'defaults.profile_edit'), edit_profile_path, class: 'btn btn-secondary md:text-xl' %>
          <%= link_to t('.my_posts'), my_posts_posts_path, class: "btn btn-accent md:text-xl" %>
          <%= link_to t('.my_questions'), my_questions_questions_path, class: "btn btn md:text-xl" %>
        </div>
      </div>
    </div>
  </div>
</div>
