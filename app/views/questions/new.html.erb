    <h2 class="text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8 md:text-red-500 animate-text-shadow-drop-center">
      <%= t '.title' %>
    </h2>
    <div class="max-w-xl border rounded-xl mx-auto">
